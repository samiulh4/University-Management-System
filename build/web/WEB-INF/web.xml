<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Student_Login</servlet-name>
        <servlet-class>controller.Student_Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin_Login</servlet-name>
        <servlet-class>controller.Admin_Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search_Active_Student</servlet-name>
        <servlet-class>ajax.Search_Active_Student</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search_Deactive_Student</servlet-name>
        <servlet-class>ajax.Search_Deactive_Student</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Student_Deactivation</servlet-name>
        <servlet-class>controller.Student_Deactivation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Student_Activation</servlet-name>
        <servlet-class>controller.Student_Activation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Student_Login</servlet-name>
        <url-pattern>/Student_Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin_Login</servlet-name>
        <url-pattern>/Admin_Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search_Active_Student</servlet-name>
        <url-pattern>/Search_Active_Student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search_Deactive_Student</servlet-name>
        <url-pattern>/Search_Deactive_Student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Student_Deactivation</servlet-name>
        <url-pattern>/Student_Deactivation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Student_Activation</servlet-name>
        <url-pattern>/Student_Activation</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
